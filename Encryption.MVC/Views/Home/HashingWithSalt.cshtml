@model HashingWithSaltViewModel
<div class="text-center">
    <h1 class="display-4">Hashing Strings!</h1>
    <p>Hash your strings here!</p>
</div>

<form asp-controller="Home" asp-action="HashingWithSalt" method="post">
    <div class="container">
        <div class="row">
            <div class="col">
            </div>
            <div class="col-8">
                <div class="form-group">
                    <div class="row">
                        <div class="mb-3">
                            <label class="form-label" asp-for="SelectedHashingTypes">Hashing Algorithm: </label>
                            <select class="form-select" asp-for="SelectedHashingTypes" asp-items="Model.HashingTypes">
                                <option>Please select type</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
            </div>
        </div>
        <div class="row">
            <div class="col">
            </div>
            <div class="col-8">
                <div class="form-group">
                    <div class="row">
                        <div class="mb-3">
                            <label asp-for="Input" class="form-label">Input string: </label>
                            <input class="form-control" asp-for="Input" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
            </div>
        </div>
        <div class="row">
            <div class="col">
            </div>
            <div class="col-8">
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Convert to Hash</button>
                </div>
            </div>
            <div class="col">
            </div>
        </div>
    </div>
</form>
<br />
<div class="row">
    <div class="col">
    </div>
    <div class="col-8">
        @if (Model.Output != null)
        {
            <div class="alert alert-success" role="alert">
                Hashing value: <br />
                @Model.Output
            </div>
        }
    </div>
    <div class="col">
    </div>
</div>
